check process process-watcher
  with pidfile /var/vcap/sys/run/shared-node/process-watcher.pid
  start program "/var/vcap/jobs/shared-node/bin/process-watcher_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/shared-node/bin/process-watcher_ctl stop" with timeout 60 seconds
  group vcap

check process agent-sharednode
  with pidfile /var/vcap/sys/run/redis-agent.pid
  start program "/var/vcap/jobs/shared-node/bin/redis-agent_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/shared-node/bin/redis-agent_ctl stop" with timeout 60 seconds
  group vcap

check process broker-nginx
  with pidfile /var/vcap/sys/run/shared-node/nginx.pid
  start program "/var/vcap/jobs/shared-node/bin/nginx_ctl start"
  stop program "/var/vcap/jobs/shared-node/bin/nginx_ctl stop"
  group vcap

